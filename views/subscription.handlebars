<div class="row">
    <div class="col-md-10">
        <h3>Add a New Subscription</h3>
        <form class="form new-subscription">
            <div class="forms">
                <label for="subscription-name">Name:</label>
                <input class="form-input" type="text" id="subscription-name" name="subscription-name" />
            </div>
            <div class="forms">
                <label for="subscription-price">Price:</label>
                <input class="form-input" id="subscription-price" name="subscription-price"></input>
            </div>
            <div class="forms">
                <button type="submit" class="btn btn-primary" id="new-subscription-button">Add New Subscription!</button>
            </div>
        </form>
    </div>

{{#if subscriptions.length}}
<div class="row text-center">
  <h2>{{subscription_name}}</h2>
  <p>{{price}}</p>
{{!-- placeholder for renewal date using special npm package --}}
  <p>
    <button id="updateBtn" class="btn btn-primary"data-id="{{id}}">Update Subscription Price</button>
  </p>
  <p>
    <button id="deleteBtn" class="btn btn-primary"data-id="{{id}}">Delete Subcription</button>
  </p>
</div>
{{/if}}

<script src="/js/subscription.js"></script>